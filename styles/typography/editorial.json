{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Editorial",
	"description": "Inspired by Newsreader",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Newsreader",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": [
								"file:./assets/fonts/newsreader/NewsreaderVariable.woff2"
							]
						},
						{
							"fontDisplay": "block",
							"fontFamily": "Newsreader",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "100 900",
							"src": [
								"file:./assets/fonts/newsreader/NewsreaderVariable-Italic.woff2"
							]
						}
					],
					"fontFamily": "Newsreader, serif",
					"name": "Newsreader",
					"slug": "newsreader"
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"name": "xSmall",
					"size": "16px",
					"slug": "x-small"
				},
				{
					"fluid": false,
					"name": "Small",
					"size": "18px",
					"slug": "small"
				},
				{
					"fluid": {
						"min": "18px",
						"max": "20px"
					},
					"name": "Medium",
					"size": "20px",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "20px",
						"max": "24px"
					},
					"name": "Large",
					"size": "24px",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "24px",
						"max": "30px"
					},
					"name": "xLarge",
					"size": "30px",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "30px",
						"max": "36px"
					},
					"name": "xxLarge",
					"size": "36px",
					"slug": "xx-large"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "var(--wp--custom--line-height--x-small)"
				}
			}
		},
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--regular)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--newsreader)",
			"fontSize": "var(--wp--preset--font-size--medium)"
		}
	}
}